<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/thArCondicionadoFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hba.fetokisystems.houseberryapp.THArCondicionadoFragment"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"

        android:layout_marginStart="44dp"
        app:srcCompat="@drawable/ac"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="32dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/swtArCondicionado"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:layout_alignBottom="@+id/imageView7"
        android:layout_toEndOf="@+id/imageView7"
        android:text="Ar condicionado"
        android:layout_marginStart="6dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintRight_toRightOf="@+id/relativeLayout2"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/imageView8"
        app:layout_constraintLeft_toRightOf="@+id/imageView8" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="258dp"
        android:layout_height="282dp"
        android:layout_marginStart="7dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/imageView8">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/imageView2"

            android:layout_marginTop="61dp"
            app:srcCompat="@drawable/thermometer" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="Temperatura:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txvTemperatura"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/textView2"
            android:text="0"
            android:textAlignment="textEnd"
            android:textColor="@android:color/black"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txvTemperatura"
            android:layout_toEndOf="@+id/txvTemperatura"
            android:text="ÂºC" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_below="@+id/imageView"
            android:layout_marginTop="12dp"
            app:srcCompat="@drawable/um" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginBottom="14dp"
            android:text="Umidade:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txvHumidade"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignStart="@+id/txvTemperatura"
            android:text="0"
            android:textAlignment="textEnd"
            android:textColor="@android:color/black"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txvHumidade"
            android:layout_alignBottom="@+id/txvHumidade"
            android:layout_alignEnd="@+id/textView3"
            android:text="%"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnAtualizaTH"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:layout_marginStart="85dp"
            android:layout_marginTop="50dp"
            android:text="ATUALIZAR" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
